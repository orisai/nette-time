{
	"name": "orisai/nette-time",
	"description": "Clock and timezone configuration for Nette",
	"keywords": [
		"clock",
		"nette",
		"orisai",
		"time",
		"timezone"
	],
	"type": "library",
	"license": "MPL-2.0",
	"homepage": "https://github.com/orisai/nette-time",
	"authors": [
		{
			"name": "Marek BartoÅ¡",
			"homepage": "https://github.com/mabar"
		}
	],
	"require": {
		"php": ">=7.4.0 <8.2.0",
		"brick/date-time": "^0.3.0",
		"orisai/exceptions": "^1.0.0",
		"nette/di": "^3.0.3"
	},
	"require-dev": {
		"infection/infection": "^0.20.0",
		"orisai/coding-standard": "^2.0.0",
		"orisai/nette-di": "^1.0.0",
		"pepakriz/phpstan-exception-rules": "^0.11.0",
		"phpstan/extension-installer": "^1.0.0",
		"phpstan/phpstan": "^0.12.0",
		"phpstan/phpstan-deprecation-rules": "^0.12.0",
		"phpstan/phpstan-nette": "^0.12.0",
		"phpstan/phpstan-phpunit": "^0.12.0",
		"phpstan/phpstan-strict-rules": "^0.12.0",
		"phpunit/phpunit": "^9.3.0",
		"staabm/annotate-pull-request-from-checkstyle": "^1.1.0"
	},
	"autoload": {
		"psr-4": {
			"OriNette\\Time\\": "src"
		}
	},
	"autoload-dev": {
	  "psr-4": {
		"Tests\\OriNette\\Time\\": "tests"
	  }
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"sort-packages": true
	}
}
